" https://vimhelp.org/options.txt.html
set nocompatible
syntax on

set autoread
set background=dark
set backspace=indent,eol,start
set cursorline
set expandtab
set hlsearch
set ignorecase
set incsearch
set modeline
set mouse=n
set number
set ruler
set scrolloff=4
set shiftwidth=4
set showcmd
set showmatch
set showmode
set smartcase
set tabstop=4
set ttyfast
set visualbell
set nowrap
set t_vb=

if has("rightleft")
  set norightleft
endif
