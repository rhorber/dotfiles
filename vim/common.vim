" Common / platform independent settings
set nocompatible
syntax on

set autoread
set background=dark
set backspace=indent,eol,start
set cursorline
set hlsearch
set ignorecase
set iminsert=0
set imsearch=0
set incsearch
set nomodeline
set modelines=0
set mouse=n
set number
set ruler
set shiftwidth=4
set showcmd
set showmatch
set showmode
set smartcase
set tabstop=4
set ttyfast
set visualbell
set nowrap
set t_vb=

if has("rightleft")
  set norightleft
endif
